{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Conditions": {
    "PrettyRole": {
      "Fn::Not": [ { "Fn::Equals": [ { "Ref": "RolePrefix" }, "" ] } ]
    }
  },
  "Description": "This template sets up the IAM role needed by an RedMine instance",
  "Outputs": {
    "InstanceRole": {
      "Description": "Name of the instance role",
      "Value": { "Ref": "InstanceRole" }
    },
    "InstanceRoleArn": {
      "Description": "ARN of the instance role",
      "Value": { "Fn::GetAtt": [ "InstanceRole", "Arn" ] }
    },
    "InstanceRoleProfile": {
      "Description": "Profile of the instance role",
      "Value": { "Ref": "InstanceProfile" }
    }
  },
  "Parameters": {
    "BackupBucketArn": {
      "Description": "S3 Bucket to host RedMine backups",
      "Type": "String"
    },
    "RolePrefix": {
      "Description": "Prefix to apply to IAM role to make things a bit prettier (optional).",
      "Type": "String"
    },
    "ServiceTld": {
      "Default": "amazonaws.com",
      "Description": "TLD of the IAMable service-name.",
      "Type": "String"
    }
  },
  "Resources": {
    "InstancePolicy": {
      "Properties": {
        "Description": "Policy to provide instance-level access to needed AWS-level resources",
        "Path": "/",
        "PolicyDocument": {
          "Statement": [
            {
              "Action": [
                "s3:*"
              ],
              "Effect": "Allow",
              "Resource": [
                {
                  "Fn::Join": [
                    "",
                    [
                      { "Ref": "BackupBucketArn" },
                      ""
                    ]
                  ]
                },
                {
                  "Fn::Join": [
                    "",
                    [
                      { "Ref": "BackupBucketArn" },
                      "/*"
                    ]
                  ]
                }
              ]
            },
            {
              "Action": [
                "cloudformation:DescribeStackResource"
              ],
              "Effect": "Allow",
              "Resource": [
                "*"
              ]
            }
          ],
          "Version": "2012-10-17"
        },
        "Roles": [ { "Ref": "InstanceRole" } ]
      },
      "Type": "AWS::IAM::ManagedPolicy"
    },
    "InstanceProfile": {
      "Properties": {
        "Path": "/",
        "Roles": [ { "Ref": "InstanceRole" } ]
      },
      "Type": "AWS::IAM::InstanceProfile"
    },
    "InstanceRole": {
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": "sts:AssumeRole",
              "Effect": "Allow",
              "Principal": {
                "Service": {
                  "Fn::Join": [
                    ".",
                    [
                      "ec2",
                      { "Ref": "ServiceTld" }
                    ]
                  ]
                }
              }
            }
          ],
          "Version": "2012-10-17"
        },
        "Path": "/",
        "RoleName": {
          "Fn::If": [
            "PrettyRole",
            {
              "Fn::Join": [
                "-",
                [
                  { "Ref": "RolePrefix" },
                  { "Ref": "AWS::StackName" }
                ]
              ]
            },
            { "Ref": "AWS::NoValue" }
          ]
        }
      },
      "Type": "AWS::IAM::Role"
    }
  }
}
